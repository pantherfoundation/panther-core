{
  "name": "panther-core",
  "description": "Panther Protocol Staking monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:contracts": "yarn workspace @panther-core/contracts compile",
    "build:dapp": "yarn workspace @panther-core/dapp build",
    "build:types": "HARDHAT_NO_MNEMONIC=yes yarn workspace @panther-core/contracts compile && yarn workspace @panther-core/contracts build:types",
    "chain": "yarn workspace @panther-core/contracts chain",
    "console": "yarn workspace @panther-core/contracts console",
    "contracts": "yarn workspace @panther-core/contracts contracts",
    "deploy:chain": "yarn workspace @panther-core/contracts deploy:chain",
    "hardhat": "yarn workspace @panther-core/contracts hardhat",
    "lint": "yarn prettier:check && yarn workspace @panther-core/contracts lint:sol && yarn workspace @panther-core/contracts lint:ts && yarn workspace @panther-core/contracts lint:ts && yarn workspace @panther-core/dapp lint:ts",
    "postinstall": "git config commit.template .gitmessage; husky install",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prettier:list-different": "yarn prettier --list-different .",
    "test": "yarn test:contracts && yarn test:dapp",
    "test:contracts": "yarn workspace @panther-core/contracts test",
    "test:dapp": "yarn workspace @panther-core/dapp test"
  },
  "workspaces": {
    "packages": [
      "contracts",
      "dapp"
    ],
    "nohoist": [
      "**/@nomiclabs/hardhat-ethers",
      "**/typechain",
      "**/@typechain/*",
      "**/solhint",
      "**/solhint/*"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "prettier-plugin-sh": "^0.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
