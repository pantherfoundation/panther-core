{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "es2018"],
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "lib",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": ["src/*", "node_modules/*", "../node_modules/*", "typing/*"]
    },
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "jest.config.js"]
}
