{
  "name": "@zkp-staking/contracts",
  "version": "0.0.1",
  "author": "Panther Protocol Team (see contributors.md)",
  "description": "Panther Protocol initial staking contracts",
  "scripts": {
    "build:types": "./scripts/gen-types.sh",
    "chain": "FAKE_MNEMONIC=yes hardhat node",
    "compile": "FAKE_MNEMONIC=yes hardhat compile",
    "console": "FAKE_MNEMONIC=yes hardhat console --network localhost",
    "coverage": "FAKE_MNEMONIC=yes hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat run deploy/token.ts",
    "deploy:chain": "FAKE_MNEMONIC=yes hardhat --network localhost run deploy/deployAll.ts",
    "deploy:network": "hardhat run deploy/token.ts --network",
    "flatten": "FAKE_MNEMONIC=yes hardhat flatten",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:list-different",
    "lint:sol": "yarn lint:solhint \"contracts/**/*.sol\"",
    "lint:solhint": "solhint --config ./.solhint.json --max-warnings 0",
    "lint:eslint": "eslint --max-warnings 0",
    "lint:ts": "yarn lint:eslint .",
    "prettier:check": "cd .. && yarn prettier --check contracts",
    "prettier:fix": "cd .. && yarn prettier --write contracts",
    "prettier:list-different": "cd .. && yarn prettier --list-different contracts",
    "storage": "FAKE_MNEMONIC=yes yarn hardhat storage | grep -v '/node_modules/\\.bin/hardhat storage' > docs/docgen/storage.layout.txt",
    "test": "FAKE_MNEMONIC=yes hardhat test",
    "test:gas": "export REPORT_GAS=yes && yarn test:long",
    "typechain": "FAKE_MNEMONIC=yes hardhat typechain",
    "verify:network": "FAKE_MNEMONIC=yes hardhat verify --network"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "snarkjs",
    "solidity",
    "zero-knowledge",
    "zk-proof"
  ],
  "license": "Unlicense",
  "dependencies": {
    "@openzeppelin/hardhat-upgrades": "^1.8.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@typechain/ethers-v5": "^5.0.0",
    "@typechain/hardhat": "^1.0.1",
    "@types/chai": "^4.2.21",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "dotenv": "^8.6.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.2.0",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.3.0",
    "hardhat-contract-sizer": "^2.1.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-storage-layout": "^0.1.6",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.5",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^8.10.2",
    "typechain": "^4.0.3",
    "typescript": "^3.9.7"
  }
}
